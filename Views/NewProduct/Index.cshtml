@model CoffeeShop.Models.NewProductModel

@{
    ViewData["Title"] = "Product Form";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2 class="fs-2 text-center m-4">@ViewData["Title"]</h2>
    </div>

    <section class="section">
        <div class="card">
            <div class="card-body p-3">

                @using (Html.BeginForm("SubmitProduct", "NewProduct", FormMethod.Post, new { @class = "form-horizontal row g-3" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group ">
                        @Html.LabelFor(m => m.ProductName, new { @class = "form-label" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Price, new { @class = "form-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @type = "number", @step = "0.01" })
                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Category, new { @class = "form-label col-md-2" })
                        <div class="col-md-12">
                            <div>
                                @Html.CheckBox("Category", new { @value = "Coffee" }) Coffee
                                @Html.CheckBox("Category", new { @value = "Tea" }) Tea
                                @Html.CheckBox("Category", new { @value = "Snacks" }) Snacks
                            </div>
                            @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Rating, new { @class = "form-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Rating, new { @class = "form-control", @type = "number", @step = "0.1", @min = "0", @max = "5" })
                            @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductDescription, new { @class = "form-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(m => m.ProductDescription, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ProductDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductCompany, new { @class = "form-label col-md-2" })
                        <div class="col-md-12">
                            @Html.DropDownListFor(m => m.ProductCompany, new SelectList(new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Select Company", Value = "" },
                                new SelectListItem { Text = "Company A", Value = "CompanyA" },
                                new SelectListItem { Text = "Company B", Value = "CompanyB" },
                                new SelectListItem { Text = "Company C", Value = "CompanyC" }
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ProductCompany, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="text-center m-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-controller="NewProduct" asp-action="Index" class="text-white btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>