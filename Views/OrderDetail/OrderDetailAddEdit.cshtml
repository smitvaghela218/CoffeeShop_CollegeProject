@model OrderDetailModel;

<main id="main" class="main">
    <div class="pagetitle">
        <h1 class="fs-2 text-center m-4">Order Details</h1>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg">

                <div class="card">
                    <div class="card-body p-3">

                        <!-- Multi Columns Form -->
                        <form class="row g-3" asp-action="OrderDetailSave">
                            <input type="hidden" asp-for="OrderDetailID" />

                            <div class="col-md-6">
                                <label for="OrderID" class="form-label">Order Date</label>

                                <select class="form-control form-select" id="OrderID" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderDate"))">
                                    <option value="">Select Order</option>
                                </select>

                                @* <select class="form-control" asp-for="OrderID">
                                <option value="">Select Order</option>
                                @foreach (var order in ViewBag.OrderList)
                                {
                                <option value="@order.OrderID">@order.OrderDate</option>
                                }
                                </select> *@
                            </div>

                            <div class="col-md-6">
                                <label for="ProductID" class="form-label">Product</label>

                                <select class="form-control form-select" id="ProductID" asp-for="ProductID" asp-items="@(new SelectList(ViewBag.ProductList, "ProductID", "ProductName"))">
                                    <option value="">Select Product</option>
                                </select>

                                @* <select class="form-control" asp-for="ProductID">
                                <option value="">Select Product</option>
                                @foreach (var pro in ViewBag.ProductList)
                                {
                                <option value="@pro.ProductID">@pro.ProductName</option>
                                }
                                </select> *@
                            </div>

                            <div class="col-md-12">
                                <label for="Quantity" class="form-label">Quantity</label>
                                <textarea rows="3" class="form-control" id="Quantity" asp-for="Quantity">Shipping Address</textarea>
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label for="Amount" class="form-label">Amount</label>
                                <input type="text" class="form-control" id="Amount" asp-for="Amount">
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label for="TotalAmount" class="form-label">Total Amount</label>
                                <input type="number" class="form-control" id="TotalAmount" asp-for="TotalAmount">
                                <span asp-validation-for="TotalAmount" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label for="UserID" class="form-label">User</label>

                                <select class="form-control form-select" id="UserID" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                    <option value="">Select User</option>
                                </select>

                                @* <select class="form-control" asp-for="UserID">
                                <option value="">Select User</option>
                                @foreach (var user in ViewBag.UserList)
                                {
                                <option value="@user.UserID">@user.UserName</option>
                                }
                                </select> *@

                                <span asp-validation-for="UserID" class="text-danger"></span>
                            </div>

                            <div class="text-center m-3">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <a asp-controller="OrderDetail" asp-action="OrderDetailList" class="text-white btn btn-secondary">Cancel</a>
                            </div>
                        </form><!-- End Multi Columns Form -->

                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
